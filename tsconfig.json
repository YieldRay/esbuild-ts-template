{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noFallthroughCasesInSwitch": true,

        /* Declaration */
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist"
    },
    "include": ["src/**/*"]
}
